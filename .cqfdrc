[project]
org="savoirfairelinux"
name="vulnscout"
build_context=.

[build]
command="make -C tests"
flavors="test test_backend test_frontend"

[test]
command="make -C tests test"

[test_backend]
command="make -C tests test_backend"

[test_frontend]
command="make -C tests test_frontend"

[test_ci]
command="make -C tests test_ci"
docker_run_args="-v /run/docker.sock:/run/docker.sock"